<div class="banner">
  <h1>Add a new task</h1>
</div>

<div class="container">
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <%= f.submit class: 'form-control btn btn-primary' %>
  <% end %>

  <br>

  <div class="task-card active">
    <%= link_to '- Back to all tasks -', tasks_path, class: 'link' %>
  </div>

</div>

