<div class="banner bg-blue">
  <h1><%= @task.title %></h1>
</div>

<div class="wrapper bg-light-blue">
  <div class="container">

    <%= form_for(@task) do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_field :details, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.check_box :completed %>
        <%= f.label :completed %>
      </div>

      <%= f.submit class: 'form-control btn btn-primary' %>

    <% end %>

  </div>
</div>
